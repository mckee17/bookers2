<table class="table mt-4">
  <tbody>
    <% comments.each do |comment| %>
    <tr>
      <td><%= link_to user_path(comment.user) do %>
          <%= attachment_image_tag comment.user,:profile_image, fallback: "no_image.jpg", size:"40x40" %>
          <% end %>
            <br><%= link_to comment.user.name,user_path(comment.user) %></td>
      <td><%= comment.comment %></td>
      <td><% if comment.user == current_user %>
            <%= link_to "削除", book_book_comment_path(comment.book,comment),method: :delete, remote: true, class:"btn btn-sm btn-danger" %>
          <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
