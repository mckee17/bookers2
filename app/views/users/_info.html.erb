<h2>User info</h2>

  <%= attachment_image_tag userinfo, :profile_image, fallback: "no_image.jpg", size:"60x60" %>

  <table class="table">
    <tbody>
      <tr>
        <th>Name</th>
        <th><%= userinfo.name %></th>
      </tr>
      <tr>
        <th>Introductuon</th>
        <th><%= userinfo.introduction %></th>
      </tr>
    </tbody>
  </table>

<div class="row">
  <% if userinfo.id == current_user.id %>
    <%= link_to 'EDIT-image', edit_user_path(userinfo.id), class:"btn btn-outline-secondary btn-block" %>
  <% else %>
    <%= link_to 'EDIT-image', user_path(current_user.id), class:"btn btn-outline-secondary btn-block" %>
  <% end %>
</div>