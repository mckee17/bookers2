<div class="container px-5 px-sm-0">
  <div class="row">

    <div class="col-md-3">
      user info
<%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size:"60x60" %>
name<%= @user.name %>
introductuon<%= @user.introduction %>
<%= link_to 'EDIT', edit_user_path(@user.id) %>


new book
<%= form_with model:@book, local:true do |f| %>
  <label for="title">Title</label>
  <%= f.text_field :title, autofocus: true %>
  <label for="Opinion">Opinion</label>
  <%= f.text_field :body, autofocus: true %>

  <%= f.submit "Create Book" %>
  <!--books/showへ-->
<% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>

        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag @user,:profile_image, fallback: "no_image.jpg", size:"60x60" %></td>
              <td><%= link_to book.title,book_path %></td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>

    </div>

  </div>
</div>