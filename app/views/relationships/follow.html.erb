<h2>Follow Users</h2>

<table class="table">
  <thead>
    <tr>
      <td>Image</td>
      <td>Name</td>
    </tr>
  </thead>
  <tbody>
    <% @follow_users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user,:profile_image, fallback: "no_image.jpg", size:"40x40" %></td>
        <td><%= user.name %></td>
        <td>フォロー数：<%= user.follower.count %></td>
        <td>フォロワー数：<%= user.followed.count %></td>
        <td><%= link_to 'Show',user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>