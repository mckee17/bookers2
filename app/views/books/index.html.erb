<div class="container px-5 px-sm-0">

  <div class="errors_message mt-3">
    <% if @booknew.errors.any? %>
      <h3><%= @booknew.errors.count %> error prohibited this obj from being saved:</h3>
      <% @booknew.errors.full_messages.each do |message| %>
        <ul>
          <li><%= message %></li>
        </ul>
      <% end %>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-3">

    <%= render 'users/info', userinfo: @userinfo %>

    <%= render 'books/new', booknew: @booknew %>

    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>

        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <% @user = book.user %>
            <tr>
              <td><%= link_to user_path(@user.id) do %>
                  <%= attachment_image_tag @user,:profile_image, fallback: "no_image.jpg", size:"40x40" %>
                  <% end %>
              </td>
              <td><%= link_to book.title,book_path(book.id) %></td>
              <td><%= book.body %></td>
              <td><% if book.favorited_by?(current_user) %>
                    <%= link_to book_favorites_path(book), method: :delete do %>
                      ❤︎ <%= book.favorites.count %>
                    <% end %>
                    <% else %>
                    <%= link_to book_favorites_path(book), method: :post do %>
                      ♡ <%= book.favorites.count %>
                    <% end %>
                  <% end %></td>
            </tr>
            <% end %>
          </tbody>
        </table>

    </div>

  </div>
</div>