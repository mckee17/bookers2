<div class="container px-5 px-sm-0">
  <div class="row mt-3">

    <div class="col-md-3">

    <%= render 'users/info', userinfo: @userinfo %>

    <%= render 'books/new', booknew: @booknew %>

    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>

      <%= render 'layouts/errors', obj: @book_comment %>

        <table class="table">
          <tbody>
            <tr>
              <td><%= link_to user_path(@user.id) do %>
                  <%= attachment_image_tag @user,:profile_image, fallback: "no_image.jpg", size:"40x40" %>
                  <% end %>
                    <br><%= link_to @user.name,user_path(@user.id) %></td>
              <td><%= link_to @book.title,book_path(@book.id) %></td>
              <td><%= @book.body %></td>

              <td><%= render'layouts/favorites', book: @book %></td>

              <td>コメント数: <%= @book.book_comments.count %></td>
              <td><% if @book.user == current_user %>
                  <%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success" %>
                  <% end %></td>
              <td><% if @book.user == current_user %>
                  <%= link_to "Destroy", book_path(@book.id), method: :delete, class:"btn btn-sm btn-danger" %>
                  <% end %></td>
            </tr>
          </tbody>
        </table>

        <div class="index_comment">
          <table class="table">
            <tbody>
              <% @book.book_comments.each do |comment| %>
              <tr>
                <td><%= link_to user_path(comment.user) do %>
                    <%= attachment_image_tag comment.user,:profile_image, fallback: "no_image.jpg", size:"40x40" %>
                    <% end %>
                      <br><%= link_to comment.user.name,user_path(comment.user) %></td>
                <td><%= comment.comment %></td>
                <td><% if comment.user == current_user %>
                      <%= link_to "削除", book_book_comment_path(comment.book,comment),method: :delete, class:"btn btn-sm btn-danger" %>
                    <% end %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="row">
          <div class="post_comment">
            <%= form_with(model:[@book,@book_comment],local: true) do |f| %>
              <%= f.text_area :comment, rows:4 %>
              <%= f.submit"送信" %>
            <% end %>
          </div>
        </div>

    </div>

  </div>
</div>